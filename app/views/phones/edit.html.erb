<% flash.each do |key, value| %>
  <%= content_tag(:div, class: "alert alert-#{key} alert-dismissable") do %>
   <%= value %>
  <% end %> 
<% end %>

<%= form_for @phone do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %><br>
  <br>
  <%= f.label :quantity %>
  <%= f.text_field :quantity %><br>
  <br>
  <fieldset class='fieldset-auto-width'>
    <%= f.label :brand %>
    <%= f.select :brand_id, options_for_select(Brand.all.map{|s|[s.name, s.id]}) %><br>
    <br>
    <%= link_to 'New Brand', new_brand_path %>
  </fieldset>
  <br><br>
  <%= f.submit "Submit" %><br>
  <br>
  <%= link_to 'Phones', phones_path %> |
  <%= link_to 'Brands', brands_path %>
<% end %>
